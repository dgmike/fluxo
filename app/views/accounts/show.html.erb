<h1>
	<span class="fi-credit-card"></span>
	Conta
	# <%= @account.id %>
</h1>

<div class="row">
	<div class="small-3 columns">Nome</div>
	<div class="small-9 columns">
		<%= @account.name %>
	</div>
</div>
<div class="row">
	<div class="small-3 columns">Descrição</div>
	<div class="small-9 columns"><%= @account.description %></div>
</div>

<hr>

<div class="row">
	<div class="small-12 column">
		<%= link_to accounts_path, class: 'button secondary small left' do %>
			<span class="fi-arrow-left"></span>
			Voltar
		<% end %>
		<div class="right">
			<%= link_to 'Apagar', @account, method: :delete, class: 'button alert small', data: { confirm: 'Tem certeza?' } %>
			<%= link_to 'Editar', edit_account_path(@account), class: 'button small' %>
		</div>
	</div>
</div>